@using DemoLibrary.Models.Readers

@model ReaderAddModel

@{
    ViewData["Title"] = "Стани Читател";
}

<form method="post">
    <h3 class="text-sm-center">Стани Читател</h3>
    <div class="form-row ">
        <label asp-for="Name">Име</label>
        <input asp-for="Name" class="form-control" value="" required>
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <button class="btn-outline-dark btn-primary btn-lg btn-block" type="submit">Потвърди</button>
</form>
